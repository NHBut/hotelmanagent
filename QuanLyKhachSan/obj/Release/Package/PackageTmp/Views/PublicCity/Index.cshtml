@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
}
<div class="hero-wrap js-fullheight" style="background-image: url('https://onetouchmedia.vn/wp-content/uploads/2019/10/N.NT-65-1024x683.jpg'); height: 200px ">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-center" data-scrollax-parent="true">
            <div class="col-md-9 text-center" style="margin-top: 200px" data-scrollax=" properties: { translateY: '70%' }">
                <p class="breadcrumbs" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }"><span class="mr-2"><a href="/">Trang chủ</a></span> <span>Thành phố</span></p>
                <h1 class="mb-3 bread" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">Danh sách thành phố trong hệ thống</h1>
            </div>
        </div>
    </div>
</div>
<section class="ftco-section ftco-degree-bg">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    @foreach (var item in ViewBag.List)
                    {
                        <div class="col-md-4">
                            <div class="destination">
                                <a href="/PublicCity/DetailCity/@item.CityId">
                                    <img width="380px" class="img img-2 d-flex justify-content-center align-items-center" src="/Content/images/@item.Image">
                                </a>
                                <div class="text p-3">
                                    <div class="d-flex">
                                        <div class="one">
                                            <h3><a href="/PublicCity/DetailCity/@item.CityId">@item.CityName</a></h3>
                                            <p class="rate">
                                                <span>Số lượng khách sạn: @item.NumberOfHotels</span>
                                            </p>
                                        </div>
                                    </div>
                                    <p class="bottom-area justify-content-center d-flex">
                                        <span class="ml-auto"><a href="/PublicCity/CityDetails/@item.CityId">Xem chi tiết</a></span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="row mt-5">
                    <div class="col text-center">
                        <div class="block-27">
                            <ul>
                                @if (ViewBag.tag > 1)
                                {
                                    int b = ViewBag.tag - 1;
                                    <li><a href="/PublicCity/Index/@b">&lt;</a></li>
                                }
                                else
                                {
                                    <li></li>
                                }
                                @for (var i = 1; i <= ViewBag.pageSize; i++)
                                {
                                    if (ViewBag.tag == i)
                                    {
                                        <li class="active"><a href="/PublicCity/Index/@i">@i</a></li>
                                    }
                                    else
                                    {
                                        <li><a href="/PublicCity/Index/@i">@i</a></li>
                                    }
                                }
                                @if (ViewBag.tag < ViewBag.pageSize)
                                {
                                    int a = ViewBag.tag + 1;
                                    <li><a href="/PublicCity/Index/@a">&gt;</a></li>
                                }
                                else
                                {
                                    <li></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div> <!-- .col-md-8 -->
        </div>
    </div>
</section> <!-- .section -->
