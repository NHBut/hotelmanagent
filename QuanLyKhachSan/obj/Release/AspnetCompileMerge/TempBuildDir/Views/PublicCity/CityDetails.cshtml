@model QuanLyKhachSan.ViewModel.CityHotelsViewModel

@{
    ViewBag.Title = "City Details";
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
}

<div class="hero-wrap js-fullheight" style="background-image: url('https://onetouchmedia.vn/wp-content/uploads/2019/10/N.NT-65-1024x683.jpg'); height: 200px">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-center" data-scrollax-parent="true">
            <div class="col-md-9 text-center" style="margin-top: 200px" data-scrollax=" properties: { translateY: '70%' }">
                <p class="breadcrumbs" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }"><span class="mr-2"><a href="/">Trang chủ</a></span> <span>@Model.CityName</span></p>
                <h1 class="mb-3 bread" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">Khách sạn trong thành phố @Model.CityName</h1>
            </div>
        </div>
    </div>
</div>

<section class="ftco-section ftco-degree-bg">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    @foreach (var hotel in Model.Hotels)
                    {
                        <div class="col-md-4">
                            <div class="destination">
                                <a href="/PublicHotel/DetailHotel/@hotel.HotelId">
                                    <img width="380px" class="img img-2 d-flex justify-content-center align-items-center" src="/Content/images/@hotel.ImageUrl">
                                </a>
                                <div class="text p-3">
                                    <div class="d-flex">
                                        <div class="one">
                                            <h3>@hotel.Name</h3>
                                            <p class="rate">
                                                <i class="icon-star"></i>
                                                <i class="icon-star"></i>
                                                <i class="icon-star"></i>
                                                <i class="icon-star"></i>
                                                <i class="icon-star"></i>
                                            </p>
                                        </div>
                                    </div>
                                    <p class="days"><span>Địa chỉ: @hotel.Address</span></p>
                                    <p class="bottom-area d-flex justify-content-center">
                                        <span class="ml-auto"><a href="/PublicHotel/DetailHotel/@hotel.HotelId">Xem chi tiết</a></span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
