                                    {
                                        if (ViewBag.tag == i)
                                        {
                                            <li><a href="/PublicHotel/DetailHotel/@ViewBag.HotelId/@i">@i</a></li>
                                        }
                                        else
                                        {
                                            <li><a href="/PublicHotel/DetailHotel/@ViewBag.HotelId/@i">@i</a></li>
                                        }

                                    }

                                    @if (ViewBag.tag < ViewBag.pageSize)
                                    {
                                        int a = ViewBag.tag + 1;
                                        <li><a href="/PublicHotel/DetailHotel/@ViewBag.HotelId/@a">&gt;</a></li>

                                    }
                                    else
                                    {
                                        <li></li>
                                    }

                                </ul>
                            </div>
                        </div>
                    </div>

                </div> <!-- .col-md-8 -->
            </div>
        </div>
</section> <!-- .section -->





