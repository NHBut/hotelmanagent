                </div>
                <div class="row mt-5">
                    <div class="col text-center">
                        <div class="block-27">
                            <div class="block-27">
                                <ul>
                                    @if (ViewBag.tag > 1)
                                    {
                                        int b = ViewBag.tag - 1;
                                        <li><a href="/PublicHotel/DetailHotel/@ViewBag.HotelId/@b">&lt;</a></li>

                                    }
                                    else
                                    {
                                        <li></li>
                                    }
